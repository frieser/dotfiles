binds {
    Mod+T hotkey-overlay-title="App: Terminal (ghostty)" { spawn-sh "uwsm app -- ghostty"; }
    Mod+B hotkey-overlay-title="App: Browser (zen)" { spawn-sh "uwsm app -- flatpak run app.zen_browser.zen"; }
    Mod+F hotkey-overlay-title="App: Files (nautilus)" { spawn-sh "uwsm app -- nautilus"; }
    
    Mod+Space hotkey-overlay-title="Launcher: Apps" { spawn-sh "uwsm app -- qs ipc call ui.dialog.launcher toggle"; }
    Mod+Shift+Space hotkey-overlay-title="Launcher: Quick Menu" { spawn-sh "uwsm app -- qs ipc call ui.dialog.launcher toggleMenu"; }
    Mod+Comma hotkey-overlay-title="Launcher: Wallpapers" { spawn-sh "uwsm app -- qs ipc call ui.dialog.launcher toggleWallpapers"; }
    Mod+Period hotkey-overlay-title="Launcher: Themes" { spawn-sh "uwsm app -- qs ipc call ui.dialog.launcher toggleThemes"; }
    Mod+Shift+F hotkey-overlay-title="Launcher: Fonts" { spawn-sh "uwsm app -- qs ipc call ui.dialog.launcher toggleFonts"; }
    Mod+C hotkey-overlay-title="Launcher: Chat" { spawn-sh "uwsm app -- qs ipc call ui.dialog.launcher.chat toggle"; }
    
    Mod+N hotkey-overlay-title="Panel: Notifications" { spawn-sh "uwsm app -- qs ipc call ui.panel.notifications toggle"; }
    Mod+U hotkey-overlay-title="Panel: Status (Utilities)" { spawn-sh "uwsm app -- qs ipc call ui.panel.status toggle"; }
    Mod+A hotkey-overlay-title="Panel: Audio" { spawn-sh "uwsm app -- qs ipc call ui.panel.audio toggle"; }
    Mod+Shift+B hotkey-overlay-title="Panel: Bluetooth" { spawn-sh "uwsm app -- qs ipc call ui.panel.bluetooth toggle"; }
    Mod+Shift+W hotkey-overlay-title="Panel: WiFi" { spawn-sh "uwsm app -- qs ipc call ui.panel.wifi toggle"; }
    Mod+Shift+U hotkey-overlay-title="Panel: Battery" { spawn-sh "uwsm app -- qs ipc call ui.panel.battery toggle"; }
    
    Mod+Alt+L hotkey-overlay-title="Overlay: Lock Screen" { spawn-sh "uwsm app -- qs ipc call ui.overlay.lockscreen lock"; }
    Mod+Alt+E hotkey-overlay-title="Dialog: Logout/Session" { spawn-sh "uwsm app -- qs ipc call ui.dialog.logout toggle"; }
    Mod+Alt+Z hotkey-overlay-title="Overlay: Screensaver" { spawn-sh "uwsm app -- qs ipc call ui.overlay.screensaver toggle"; }
    Mod+Alt+I hotkey-overlay-title="Dialog: System Info" { spawn-sh "uwsm app -- qs ipc call ui.dialog.about toggle"; }
    Mod+Alt+C hotkey-overlay-title="Dialog: Gemini Chat" { spawn-sh "uwsm app -- flatpak run app.zen_browser.zen --class=local.floating --new-window http://127.0.0.1:4096/"; }
    Mod+Ctrl+C hotkey-overlay-title="Dialog: Gemini Chat" { spawn-sh "uwsm app -- flatpak run app.zen_browser.zen --class=local.floating --new-window https://gemini.google.com/"; }
    
    Mod+P hotkey-overlay-title="Pomodoro: Start Work" { spawn-sh "uwsm app -- qs ipc call ui.timer.pomodoro startWork"; }
    Mod+Shift+P hotkey-overlay-title="Pomodoro: Pause/Resume" { spawn-sh "uwsm app -- qs ipc call ui.timer.pomodoro pause"; }
    Mod+Ctrl+P hotkey-overlay-title="Pomodoro: Stop" { spawn-sh "uwsm app -- qs ipc call ui.timer.pomodoro stop"; }
    Mod+Alt+P hotkey-overlay-title="Pomodoro: Start Break" { spawn-sh "uwsm app -- qs ipc call ui.timer.pomodoro startBreak"; }
    
    Mod+V hotkey-overlay-title="Voice: Dictation Toggle" { spawn-sh "uwsm app -- qs ipc call ui.overlay.voice toggle"; }
    Mod+Shift+V hotkey-overlay-title="Voice: System Command" { spawn-sh "uwsm app -- qs ipc call ui.overlay.voice voiceSystem"; }
    Mod+Slash hotkey-overlay-title="Help: Keybindings Cheatsheet" { spawn-sh "uwsm app -- qs ipc call ui.dialog.cheatsheet toggle"; }
    Mod+Shift+Slash { show-hotkey-overlay; }
    Mod+Ctrl+R hotkey-overlay-title="Config: Reload Quickshell" { spawn-sh "uwsm app -- qs ipc call ui.config reload"; }
    
    Mod+O hotkey-overlay-title="Niri: Overview" repeat=false { toggle-overview; }
    Mod+Q hotkey-overlay-title="Window: Close" repeat=false { close-window; }
    
    Mod+Left  { focus-column-left; }
    Mod+Down  { focus-window-or-workspace-down; }
    Mod+Up    { focus-window-or-workspace-up; }
    Mod+Right { focus-column-right; }
    Mod+H     { focus-column-left; }
    Mod+J     { focus-window-or-workspace-down; }
    Mod+K     { focus-window-or-workspace-up; }
    Mod+L     { focus-column-right; }
    
    Mod+Home { focus-column-first; }
    Mod+End  { focus-column-last; }
    
    Mod+Ctrl+Left  { move-column-left; }
    Mod+Ctrl+Down  { move-window-down-or-to-workspace-down; }
    Mod+Ctrl+Up    { move-window-up-or-to-workspace-up; }
    Mod+Ctrl+Right { move-column-right; }
    Mod+Ctrl+H     { move-column-left; }
    Mod+Ctrl+J     { move-window-down-or-to-workspace-down; }
    Mod+Ctrl+K     { move-window-up-or-to-workspace-up; }
    Mod+Ctrl+L     { move-column-right; }
    
    Mod+Ctrl+Home { move-column-to-first; }
    Mod+Ctrl+End  { move-column-to-last; }
    
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }
    
    Mod+Ctrl+1 { move-column-to-workspace 1; }
    Mod+Ctrl+2 { move-column-to-workspace 2; }
    Mod+Ctrl+3 { move-column-to-workspace 3; }
    Mod+Ctrl+4 { move-column-to-workspace 4; }
    Mod+Ctrl+5 { move-column-to-workspace 5; }
    Mod+Ctrl+6 { move-column-to-workspace 6; }
    Mod+Ctrl+7 { move-column-to-workspace 7; }
    Mod+Ctrl+8 { move-column-to-workspace 8; }
    Mod+Ctrl+9 { move-column-to-workspace 9; }
    
    Mod+Tab { focus-workspace-previous; }
    
    Mod+Ctrl+Shift+J { move-workspace-down; }
    Mod+Ctrl+Shift+K { move-workspace-up; }
    
    Mod+WheelScrollDown      cooldown-ms=150 { focus-workspace-down; }
    Mod+WheelScrollUp        cooldown-ms=150 { focus-workspace-up; }
    Mod+Ctrl+WheelScrollDown cooldown-ms=150 { move-column-to-workspace-down; }
    Mod+Ctrl+WheelScrollUp   cooldown-ms=150 { move-column-to-workspace-up; }
    
    Mod+WheelScrollRight      { focus-column-right; }
    Mod+WheelScrollLeft       { focus-column-left; }
    Mod+Ctrl+WheelScrollRight { move-column-right; }
    Mod+Ctrl+WheelScrollLeft  { move-column-left; }
    
    Mod+Shift+WheelScrollDown      { focus-column-right; }
    Mod+Shift+WheelScrollUp        { focus-column-left; }
    Mod+Ctrl+Shift+WheelScrollDown { move-column-right; }
    Mod+Ctrl+Shift+WheelScrollUp   { move-column-left; }
    
    Mod+Shift+H { consume-or-expel-window-left; }
    Mod+Shift+L { consume-or-expel-window-right; }
    Mod+BracketLeft  { consume-window-into-column; }
    Mod+BracketRight { expel-window-from-column; }
    
    Mod+W { switch-preset-column-width; }
    Mod+Shift+E { switch-preset-window-height; }
    Mod+Ctrl+W { reset-window-height; }
    
    Mod+M { maximize-column; }
    Mod+Shift+M { maximize-window-to-edges; }
    Mod+X { fullscreen-window; }
    
    Mod+Minus { set-column-width "-10%"; }
    Mod+Equal { set-column-width "+10%"; }
    Mod+Shift+Minus { set-window-height "-10%"; }
    Mod+Shift+Equal { set-window-height "+10%"; }
    
    Mod+G hotkey-overlay-title="Window: Toggle Floating" { toggle-window-floating; }
    Mod+Shift+G hotkey-overlay-title="Focus: Switch Floating/Tiling" { switch-focus-between-floating-and-tiling; }
    Mod+Shift+T hotkey-overlay-title="Column: Toggle Tabs" { toggle-column-tabbed-display; }
    
    Mod+Ctrl+Space hotkey-overlay-title="Layout: Next Keyboard" { switch-layout "next"; }
    Mod+Ctrl+Shift+Space hotkey-overlay-title="Layout: Previous Keyboard" { switch-layout "prev"; }
    
    Mod+Print hotkey-overlay-title="Screenshot: Area" { screenshot; }
    Mod+Shift+Print hotkey-overlay-title="Screenshot: Screen" { screenshot-screen; }
    Mod+Ctrl+Print hotkey-overlay-title="Screenshot: Window" { screenshot-window; }
    
    Mod+S hotkey-overlay-title="Screencast: Set Window" { set-dynamic-cast-window; }
    Mod+Shift+S hotkey-overlay-title="Screencast: Set Monitor" { set-dynamic-cast-monitor; }
    Mod+Ctrl+S hotkey-overlay-title="Screencast: Clear" { clear-dynamic-cast-target; }
    
    XF86AudioRaiseVolume allow-when-locked=true { spawn-sh "uwsm app -- wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.1+"; }
    XF86AudioLowerVolume allow-when-locked=true { spawn-sh "uwsm app -- wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.1-"; }
    XF86AudioMute        allow-when-locked=true { spawn-sh "uwsm app -- wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle"; }
    XF86AudioMicMute     allow-when-locked=true { spawn-sh "uwsm app -- wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle"; }
    XF86AudioPlay        allow-when-locked=true { spawn-sh "uwsm app -- playerctl play-pause"; }
    XF86AudioNext        allow-when-locked=true { spawn-sh "uwsm app -- playerctl next"; }
    XF86AudioPrev        allow-when-locked=true { spawn-sh "uwsm app -- playerctl previous"; }
    
    XF86MonBrightnessDown allow-when-locked=true { spawn-sh "uwsm app -- brightnessctl --class=backlight set 10%-"; }
    XF86MonBrightnessUp   allow-when-locked=true { spawn-sh "uwsm app -- brightnessctl --class=backlight set 10%+"; }
    
    Mod+Escape hotkey-overlay-title="Toggle: Keyboard Inhibit" allow-inhibiting=false { toggle-keyboard-shortcuts-inhibit; }
    Mod+Shift+Escape hotkey-overlay-title="Quit: Niri" { quit; }
}
